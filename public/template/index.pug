                    //-     button Delete
                    //-     button Update
                    //-     button Detail
            .center
                if (pages > 0)
                    ul.pagination.text-center
                        if(current == 1)
                            li.disabled
                                a First
                        else
                            li
                                a(href="/post/1") First
                        - var i = Number(current) > 5 ? Number(current) - 4 : 1 
                        if(i !== 1)
                            li.disabled
                                a ...
                        while i <= (Number(current) + 4) && i <= pages
                            if(i == current)
                                li.active
                                    a= i
                            else
                                li
                                    a(href=`/post/${i}`)= `${i}`
                            if(i === Number(current) + 4 && i < pages)
                                li.disabled
                                    a ...
                            - i++
                        if(current == pages)
                            li.disabled
                                a Last
                        else
                            li
                                a(href=`/post/${pages}`) Last
            footer  
                .icon-logo2
                    img(src='/img/logo.png' alt='logo-footer')
                .link
                    ul.link-footer
                        li
                        a(href='') About me
                        li
                        a(href='') Contact
                        li
                        a(href='') Link
                        li
                        a(href='') Link
                    span.author Â© by TranHoa
